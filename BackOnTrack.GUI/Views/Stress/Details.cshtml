@model BackOnTrack.GUI.Models.Stress.DetailsStressViewModel

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            Stress result:
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Result)
        </dd>
        <dt class = "col-sm-3">
            Date:
        </dt>
        <dd class = "col-sm-9">
            @Model.date.ToString("dddd dd/M/yyyy")
        </dd>
        <dt class = "col-sm-3">
            Hours slept last night:
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.SleptLastNight)
        </dd>
        <dt class = "col-sm-3">
            Tasks planned for this day:
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TasksPlanned)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var notification = '@TempData["Notification"]';

            if (notification) {
                toastr.warning(notification, "Creation Error");
            }
        });
    </script>
}
